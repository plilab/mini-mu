{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "MiniMu",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#constructors"
    },
    {
      "include": "#variables"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-dash.minimu",
          "begin": "--",
          "end": "$"
        },
        {
          "name": "comment.block.minimu",
          "begin": "\\{-",
          "end": "-\\}"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.minimu",
          "match": "\\b(def|run|import|export|seq|then|halt|let|in)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.minimu",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.minimu",
          "match": "\\\\."
        }
      ]
    },
    "numbers": {
      "name": "constant.numeric.minimu",
      "match": "\\b[0-9]+\\b"
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arrow.minimu",
          "match": "->"
        },
        {
          "name": "keyword.operator.pipe.minimu",
          "match": "\\|"
        },
        {
          "name": "keyword.operator.dot.minimu",
          "match": "\\."
        },
        {
          "name": "keyword.operator.at.minimu",
          "match": "@"
        },
        {
          "name": "keyword.operator.assign.minimu",
          "match": ":="
        },
        {
          "name": "keyword.operator.bind.minimu",
          "match": "<-"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.definition.minimu",
          "match": "(?<=def\\s+)[a-z_][a-zA-Z0-9_]*"
        },
        {
          "name": "entity.name.function.call.minimu",
          "match": "\\b[a-z_][a-zA-Z0-9_']*(?=\\s*@)"
        }
      ]
    },
    "constructors": {
      "name": "entity.name.type.minimu",
      "match": "\\b[A-Z][a-zA-Z0-9_:']*\\b"
    },
    "variables": {
      "name": "variable.other.minimu",
      "match": "\\b[a-z_][a-zA-Z0-9_']*\\b"
    }
  },
  "scopeName": "source.minimu"
}
